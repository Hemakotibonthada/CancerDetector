# ==========================================
# Cancer Detection Platform - Environment Variables
# Copy to .env and update values for your deployment
# ==========================================

# ---- Application ----
APP_ENV=development
APP_NAME=Cancer Detection Platform
APP_VERSION=1.0.0
LOG_LEVEL=info
DEBUG=false

# ---- Backend API ----
API_PORT=8000
WORKERS=4
JWT_SECRET=CHANGE-THIS-TO-A-LONG-RANDOM-STRING
JWT_ACCESS_TOKEN_MINUTES=30
JWT_REFRESH_TOKEN_DAYS=30
ENCRYPTION_KEY=CHANGE-THIS-ENCRYPTION-KEY
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# ---- PostgreSQL ----
POSTGRES_DB=cancer_detection
POSTGRES_USER=cdp_user
POSTGRES_PASSWORD=CHANGE-THIS-DB-PASSWORD
DB_PORT=5432
DATABASE_URL=postgresql://cdp_user:CHANGE-THIS-DB-PASSWORD@localhost:5432/cancer_detection

# ---- Redis ----
REDIS_PASSWORD=CHANGE-THIS-REDIS-PASSWORD
REDIS_PORT=6379
REDIS_URL=redis://:CHANGE-THIS-REDIS-PASSWORD@localhost:6379/0

# ---- Frontend ----
FRONTEND_PORT=3000
FRONTEND_SSL_PORT=3443
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# ---- Email (SMTP) ----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cancerdetection.com
SMTP_TLS=true

# ---- File Storage ----
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100
STORAGE_BACKEND=local
# For S3/MinIO:
# S3_BUCKET=cancer-detection-uploads
# S3_REGION=us-east-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_ENDPOINT=http://localhost:9000

# ---- MinIO (Object Storage) ----
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=CHANGE-THIS-MINIO-SECRET
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ---- AI/ML ----
ML_MODEL_PATH=./ai_models/saved_models
ML_BATCH_SIZE=32
ML_MAX_CONCURRENT=4
ENABLE_GPU=false

# ---- Monitoring ----
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE-THIS-PASSWORD

# ---- PgAdmin ----
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@cancerdetection.com
PGADMIN_PASSWORD=CHANGE-THIS-PASSWORD

# ---- Elasticsearch ----
ES_PORT=9200
ES_JAVA_OPTS=-Xms512m -Xmx512m

# ---- External APIs ----
# OPENAI_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# SENDGRID_API_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_PUBLISHABLE_KEY=
